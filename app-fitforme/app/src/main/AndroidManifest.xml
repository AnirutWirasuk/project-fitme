<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ffme.fitforme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/fit_app_icon"
        android:label="@string/app_name"
        android:version ="2"
        android:roundIcon="@mipmap/fit_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        android:fullBackupContent="@xml/backup_descriptor">

        <activity
            android:name="com.ffme.fitforme.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name="com.ffme.fitforme.MainSplashScreen"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name_splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.ffme.fitforme.UpdateProfile"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.ffme.fitforme.ValidationRegister"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/editTextWhite"/>
        <activity
            android:name="com.ffme.fitforme.ValidationLogin"
            android:screenOrientation="portrait"
            android:exported="true"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/editTextWhite"/>

        <activity
            android:name="com.ffme.fitforme.BaseActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>

        <activity
            android:name="com.ffme.fitforme.BaseActivityTransparentToolbar"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>


    </application>

</manifest>